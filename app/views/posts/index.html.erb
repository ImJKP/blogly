

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= current_user.first_name %>'s Blog
                    <small><%= current_user.username %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

  <% @posts.each do |a_post| %>
    <% @a_post = a_post %>
    <%= render "blurb" %>
  <% end %>

        <!-- Pagination -->
        <div class="text-center">
          <%= will_paginate @posts %>
        </div>
        <!-- /.row -->

        <hr>
    </div>
    <!-- /.container -->
