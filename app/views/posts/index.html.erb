

<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= current_user.first_name %>'s Blog
                <small><%= current_user.username %></small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

  <% @posts.each do |a_post| %>
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img class="img-responsive" src="<%= a_post.cover %>" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3><%= a_post.title %></h3>
            <p><%= a_post.body.first(200) %><% if a_post.body.length > 200 %>...<% end %></p>
            <%= link_to 'View Post', user_post_path(current_user.id,a_post.id), method: "GET", class: "btn btn-primary" %>
        </div>
    </div>
    <!-- /.row -->
    
    <hr>

  <% end %>

    <!-- Pagination -->
    <div class="text-center">
      <%= will_paginate @posts %>
    </div>
    <!-- /.row -->

    <hr>
</div>
<!-- /.container -->
