<div class="small-container well">
	<h2>Create Account</h2>
    <%= form_for(@user, url: user_registration_path, method:"POST") do |f| %>
  <%= devise_error_messages! %>
  
	<div class="margin-top-20">
	  <%= f.text_field :first_name, placeholder: "First Name", class: "form-control", autofocus: true %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_field :email, placeholder: "Email Address", class: "form-control" %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_field :password, placeholder: "Password", class: "form-control" %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_field :password, placeholder: "Confirm Password", class: "form-control" %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
	</div>

	<div class="margin-top-20">
	  <%= f.text_area :about_me, placeholder: "About Me", class: "form-control" %>
	</div>

	<div class="margin-top-20">
		<button type="submit" class="btn btn-primary">Create Account</button>
	</div>
  <% end %>
	<div class="margin-top-10">
		Already have an account? <%= link_to "Sign in!", new_user_session_path %>
	</div>
</div>