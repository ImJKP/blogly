<div class="small-container well">
  <h2>Login</h2>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= form_for(@user, url: user_session_path, method: "POST") do |f| %>
  
  
  	<div class="margin-top-20">
		  <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
	  </div>
	
		<div class="margin-top-20">
	  	<%= f.text_field :password, type: "password", class: "form-control", placeholder: "Password", autocomplete: "off" %>
  	</div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>